<div class="conteiner d-flex justify-content-center">
    <div class="col-8">
      <div class="row col-11 d-flex mt-2 mb-2">
          <%= image_tag @post.user.get_profile_image(80, 80), class: "border rounded-circle user_icon2" %>
          <h3 class="d-flex align-items-center mb-0 mr-3 ml-2"><%= link_to @post.user.name, admin_user_path(@post.user.id), class: "ml-3 user" %></h3>
          <p class="d-flex align-items-center mb-0 ml-3 text-muted"><%= l @post.created_at %></p>
        </div>
        <div class="post_show">
        <div class="d-flex flex-column border-bottom pb-3">
          <h4><%= safe_join(@post.body.split("\n"),tag(:br)) %></h4>
          <% if @post.image.attached? %>
            <%= image_tag @post.image, class:"img-fluid col-11 mt-2 d-flex align-items-center" %>
          <% end %>
          <div class="d-flex">
            <% @post.tags.each do |tag| %>
              <%= link_to admin_search_path(content: tag.name, model:"tag", method: "perfect") do %>
                <p class="mr-1">＃<%= tag.name %></p>
              <% end %>
            <% end %>
          </div>
          <div class="d-flex align-items-center mt-2">
          <h3 class="mr-5"><div class="count"><i class="fa-regular fa-heart favorite_false"></i><%= @post.favorites.count %></div></h3>
          <h3 class="mt-1 mx-5"><i class="fa-regular fa-message"></i>  <%= @post.post_comments.count %> </h3>
            <%= link_to "削除", admin_post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger ml-5" %>
          </div>
        </div>
        <div>
          <% @post.post_comments.each do |post_comment| %>
            <div class="row col-11 pt-3">
              <%= image_tag post_comment.user.get_profile_image(45, 45), class: "border rounded-circle" %>
              <h5 class="d-flex align-items-center mb-0 mr-3 ml-2"><%= link_to post_comment.user.name, admin_user_path(post_comment.user.id), class: "ml-3 user" %></h5>
              <p class="d-flex align-items-center mb-0 ml-3 text-muted"><%= l post_comment.created_at %></p>
            </div>
            <div class="d-flex flex-column pb-3 border-bottom">
              <h6 class="pt-2"><%= safe_join(post_comment.comment.split("\n"),tag(:br)) %></h6>
              <div class="d-flex justify-content-between pb-3">
              <div></div>
                <%= link_to "削除", admin_post_post_comment_path(post_comment.post, post_comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger mr-4" %>
              </div>
            </div>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>