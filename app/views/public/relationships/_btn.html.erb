<% if user_signed_in? && current_user.id != user.id %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", user_relationship_path(user.id), method: :delete, class: "btn btn-secondary", remote: true %>
  <% else %>
    <%= link_to "フォローする", user_relationship_path(user.id), method: :post, class: "btn btn-info", remote: true %>
  <% end %>
<% end %>