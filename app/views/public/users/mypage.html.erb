<div class="container frame">
  <div class="row">
    <div class="col-2 col-sm-2 col-md-3">
      <%= render 'public/header' %>
    </div>

    <div class="col-1 hidden-on-mobile"></div>

    <div class="col-8">
      <div class="d-flex flex-column justify-content-center border-bottom pb-3">
        <div class="row d-flex align-items-center justify-content-between">
          <%= image_tag @user.get_profile_image(100, 100), class: "border rounded-circle user_icon", size: "100x100" %>
          <h2><%= @user.name %></h2>
          <div></div>
        </div>
        <p class="border rounded mt-3 ml-3 profile">
          <% if @user.profile %>
            <%= safe_join(@user.profile.split("\n"),tag(:br)) %>
          <% end %>
        </p>
        <%= link_to edit_user_path(current_user.id) do %>
          <p class="col-11 ml-4 mt-2 btn btn-outline-secondary w-100"><i class="fa-solid fa-gear"> 設定</i></p>
        <% end %>
        <div id="relationship_btn_<%= @user.id %>"><%= render "public/relationships/btn", user: @user %></div>
        <div class="d-flex align-items-center mt-2">
          <%= link_to follows_user_path(current_user.id), class: "follow" do %>
            <p class="mb-1">フォロー中 <%= @user.followers.count %></p>
          <% end %>
          <%= link_to followers_user_path(current_user.id), class: "follow" do %>
            <p class="ml-4 mb-1">フォロワー <%= @user.followeds.count %></p>
          <% end %>
        </div>
      </div>

      <div class="border-bottom mt-2 user_posts">
        <%= render 'public/posts/index' , posts: @posts %>
      </div>
    </div>
  </div>
</div>