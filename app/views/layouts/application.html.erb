<!DOCTYPE html>
<html>
  <head>
    <title>Allershare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/57875cad45.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'homes' , media: 'all' %>
    <%= stylesheet_link_tag 'application' , media: 'all' %>
    <%= stylesheet_link_tag 'posts' , media: 'all' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert py-0 my-0"><%= alert %></p>

    <%= yield %>
  </body>
</html>
