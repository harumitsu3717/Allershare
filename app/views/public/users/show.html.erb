<div class="container">
  <div class="row">
    <div class="col-2 col-sm-2 col-md-3">
      <%= render 'public/header' %>
    </div>

    <div class="col-1 hidden-on-mobile"></div>

  <div class="col-8">
    <div class="d-flex align-items-center border-bottom pb-3">
      <div class="d-flex flex-column justify-content-center">
        <%= image_tag @user.get_profile_image(100, 100), class: "border rounded-circle user_icon" %>
        <h2 class="text-center"> <%= @user.name %></h2>
      </div>
      <p class="border rounded col-8 ml-3"> <%= @user.profile %></p>
    </div>
  

    <div class="col-10 border-bottom mt-2 posts">
      <% @posts.each do |post| %>
        <div class="row col-11 d-flex mt-2">
          <%= image_tag post.user.get_profile_image(45, 45), class: "border rounded-circle icon" %>
          <p class="d-flex align-items-center mb-0 mr-3 ml-2"><%= post.user.name %></p>
          <p class="d-flex align-items-center mb-0 ml-3 text-muted"><%= l post.created_at %></p>
        </div>
        <div class="d-flex flex-column mt-2">
          <%= link_to post_path(post.id), class:"border-bottom pb-2 pl-2 post" do %>
            <p class="mb-0"><%= post.body %> </p>
            <% if post.image.attached? %>
              <%= image_tag post.image, class:"img-fluid col-11 mt-2" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
</div>
</div>
</div>