<div class="container frame">
  <div class="row">
    <div class="col-2 col-sm-2 col-md-3">
      <%= render 'public/header' %>
    </div>

    <div class="col-1 hidden-on-mobile"></div>

    <div class="col-8">
      <h1 class="mb-4">新規投稿</h1>

      <%= form_with model: @post do |f| %>

        <h4>投稿内容</h4>
        <%= f.text_area :body, class: "form-control" %>
        <% if @post.errors.any? %>
          <p>内容を入力してください</p>
        <% end %>

        <h4 class="mt-3">画像</h4>
        <%= f.file_field :image, accept: "image/*" %>

        <h4 class="mt-3">タグ</h4>
        <%= flash[:error] %>
        <%= f.text_area :tag_name, class: 'form-control', placeholder:"タグが複数の場合は , で区切ってください" %>

        <%= f.submit '投稿', class: "btn btn-outline-info btn-post mt-2" %>
      <% end %>
    </div>
  </div>
</div>