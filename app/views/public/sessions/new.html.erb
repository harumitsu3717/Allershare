<div class="container-fluid background-image p-5">
<div class="col-8 d-flex justify-content-center flex-column mx-auto border-reft haikei">
<div class="col-8 d-flex justify-content-center flex-column mx-auto contents">
<div class="mx-auto">
<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス", class: "mb-0" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mb-2" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード", class: "mb-0" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "mb-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン状態を保持する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-outline-primary mb-3" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

</div>
</div>
</div>
</div>
