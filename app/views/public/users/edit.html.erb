<div class="container">
  <div class="row">
    <div class="col-2 col-sm-2 col-md-3">
      <%= render 'public/header' %>
    </div>

    <div class="col-1 hidden-on-mobile"></div>

    <div class="col-8">
      <div class="mx-auto">
        <h2 class="text-center mt-3 mb-4">ユーザー情報編集</h2>

        <div class="mt-4 border p-3">
          <%= form_with model: @user do |f| %>
            <h4>ユーザーアイコン</h4>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            <p class="mb-2 font-weight-light">（画像の中央がトリミングされます）</p>
            <h4>ユーザーネーム</h4>
            <%= f.text_field :name, autofocus: true, placeholder:"名前を入力", class: "mb-2" %>
            <h4>プロフィール</h4>
            <%= f.text_area :profile, placeholder:"プロフィール文を入力", class: "mb-2" %>
            <%= f.submit "変更を保存", class: "ml-3 btn btn-outline-info" %>
          <% end %>
          <%= link_to "退会する", unsubscribe_path, class: "btn btn-outline-danger btn-sm" %>
        </div>

      </div>

    </div>
  </div>
</div>
