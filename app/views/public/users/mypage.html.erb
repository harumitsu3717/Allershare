<%= render 'public/header' %>

<div>
  <%= image_tag @user.profile_image.variant(resize: '100x100') %>
  <h2> <%= @user.name %></h2>
  <p> <%= @user.profile %></p>
</div>

<%= link_to "編集" , edit_user_path(current_user.id) %>

<% @posts.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <p>タイトル：<%= post.title %> </p>
      <p>本文：<%= post.body %> </p>
    <% end %>
  </div>
<% end %>