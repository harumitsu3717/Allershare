
  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorite_path(post), method: :delete, remote: true do %>
      <div class="count"><i class="fa-solid fa-heart favorite_true"></i>
      <%= post.favorites.count %></div>
    <% end %>
  <% else %>
    <%= link_to post_favorite_path(post), method: :post, remote: true do %>
      <div class="count"><i class="fa-regular fa-heart favorite_false"></i>
      <%= post.favorites.count %></div>
    <% end %>
  <% end %>
