<div class="conteiner d-flex flex-column align-items-center frame">
  <h1>全ユーザー一覧</h1>
  <div class="w-75 d-flex flex-column align-items-center border admin_users">
    <%= render 'admin/users/index', users: @users %>
    <div class="pagination">
      <%= link_to_next_page @users, '次へ', rel: 'next', class: 'infinite-next' %>
    </div>
  </div>
</div>

<script src="https://unpkg.com/infinite-scroll@5/dist/infinite-scroll.pkgd.min.js"></script>
<script>
$(function(){
	$(".admin_users").infiniteScroll({
		path: ".pagination a",
    append: ".user-item",
    elementScroll: true,   
    scrollThreshold: 100
	});
});
</script>
