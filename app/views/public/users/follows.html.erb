<div class="container">
  <div class="row">
    <div class="col-2 col-sm-2 col-md-3">
      <%= render 'public/header' %>
    </div>

    <div class="col-1 hidden-on-mobile"></div>

    <div class="col-8">
      <div class="d-flex flex-column justify-content-center border-bottom pb-0">
        <div class="row d-flex align-items-center justify-content-between">
          <%= image_tag @user.get_profile_image(100, 100), class: "border rounded-circle user_icon", size: "100x100" %>
          <%= link_to user_path(@user.id), class: "user" do %>
            <h3><%= @user.name %></h3>
          <% end %>
          <div></div>
        </div>
        <div class="mt-3" id="relationship_btn_<%= @user.id %>"><%= render "public/relationships/btn", user: @user %></div>
        <div class="d-flex align-items-center mt-2">
          <%= link_to follows_user_path, class: "follow" do %>
            <p class="mb-1">フォロー中 <%= @user.followers.count %></p>
          <% end %>
          <%= link_to followers_user_path, class: "follow" do %>
            <p class="ml-4 mb-1">フォロワー <%= @user.followeds.count %></p>
          <% end %>
        </div>
      </div>
  
      <div class="d-flex align-items-center justify-content-center mt-3 border-bottom pb-2"><h3>フォロー中一覧</h3></div>
      <div class="border-bottom mt-2 user_posts">
        <%= render 'public/users/index' , users: @users %>
      </div>
    </div>
  </div>
</div>