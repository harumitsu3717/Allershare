
<div class="container-fluid d-flex justify-content-center background-image-2">
<div class=" d-flex justify-content-center flex-column haikei_sessions">
<div class=" d-flex justify-content-center flex-column mx-auto contents">
<div class="mx-auto ">
<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/error_messages", resource: resource %>
  <% if flash[:notice] %>
    <p> <%= notice %> </p>
  <% end %>

  <div class="field">
    <%= f.label :name, "ユーザーネーム", class: "mb-0" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "mb-0" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "mb-0" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上のもの)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "mb-0" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn btn-outline-secondary mb-3" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
</div>
</div>
</div>
</div>
